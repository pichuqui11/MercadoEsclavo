<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mercadoesclavo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mercado_esclavo_mini2"
        android:label="Mercado Esclavo"
        android:roundIcon="@drawable/logo_mercado_esclavo_mini2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreacionDePerfil"
        android:theme="@style/AppTheme.TemaPopUp"></activity>
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DetailActivity"
            android:label="Detail"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Mercado Esclavo">
            <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
    </intent-filter>
    </activity>
    </application>

</manifest>